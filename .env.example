# LLKJJ ML Pipeline Configuration - Poetry Version
# Kopiere diese Datei nach .env und fülle die Werte aus

# Google AI API Konfiguration
GOOGLE_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-pro

# PDF Verarbeitung
PDF_INPUT_DIR=./data/input/pdfs
EXTRACT_IMAGES=false
MAX_PDF_SIZE_MB=50

# Ausgabe-Pfade
OUTPUT_DIR=./data/output
JSONL_OUTPUT_DIR=./data/training
VECTOR_DB_PATH=./data/vectors
CHROMA_COLLECTION_NAME=llkjj_invoices

# Pfade
DATA_RAW_PATH=data/raw/
DATA_PROCESSED_PATH=data/processed/
TRAINING_DATA_PATH=data/training/
MODELS_PATH=models/

# SKR03 Konfiguration für Elektrotechnik-Handwerk
SKR03_MAPPING_FILE=config/skr03_elektro.json
DEFAULT_ACCOUNT_ELEKTRO=4830
DEFAULT_ACCOUNT_OFFICE=4935
DEFAULT_ACCOUNT_TOOLS=4600
DEFAULT_ACCOUNT_ASSETS=0490

# Spacy Training
SPACY_MODEL_NAME=de_core_news_sm
SPACY_MODEL_OUTPUT=./models/skr03_classifier
TRAINING_ITERATIONS=100
BATCH_SIZE=8

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/llkjj_pipeline.log

# Development & Testing
DEBUG_MODE=false
MOCK_GEMINI=false
TEST_MODE=false
